func responseTo(question: String) -> String {
    let lower = question.lowercased()
    
    if lower == "where are the cookies?" {
        return "In the chuck wagon!"
    }
    
    if lower.hasPrefix("where") {
        return "Out on the open range."
    }
    
    if lower.hasPrefix("hello") || lower.hasPrefix("hi") {
        return "Howdy!"
    }
    
    if lower.hasPrefix("who") {
        return "A real cowboy, thatâ€™s who."
    }
    
    if lower.hasPrefix("what") {
        return "Just cowboy business."
    }
    
    if lower.hasPrefix("why") {
        return "Because the West is wild."
    }
    
    if lower.hasPrefix("how") {
        return "With grit and a good horse."
    }
    
    let flip = question.count % 2
    if flip == 0 {
        return "Hard to say, partner."
    } else {
        return "Try askin' again later."
    }
}
