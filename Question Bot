func responseTo(question: String) -> String {
    let lowercaseQuestion = question.lowercased()

    if lowercaseQuestion == "hello there" {
        return "Why, hello there!"
    } else if lowercaseQuestion == "where should i go on holiday?" || lowercaseQuestion == "where can i find the north pole?" {
        return "To the North!"
    } else if lowercaseQuestion == "where are the cookies?" {
        return "In the cookie jar!"
    } else if lowercaseQuestion.hasPrefix("can i have a cookie?") {
      
        return "Yes, you may!"
    } else if lowercaseQuestion.hasPrefix("should i quit?") {
     
        return "You should never quit!"
    } else {
      
        return "Let me think about that one."
    }
}

