// PAGE 13 "fixing your morning" 
let brushteeth = 3
let wakeup = 5
let eatingfood = 10
let gettingdressed = 2
let fixlunch = 5
let packingstuff = 5

let morningdutiestime = brushteeth + eatingfood + gettingdressed + fixlunch + packingstuff + wakeup

let havetodo = brushteeth + wakeup + packingstuff + gettingdressed
let liketodo = eatingfood + fixlunch
let havetoandliketo = havetodo + liketodo

// PAGE 14 "good names" 
let orangecost = 14
let watermeloncost = 3
let orangeweight = 100
let watermelonweight = 200
let totalorange = orangecost * orangeweight
let totalwatermelon = watermeloncost * watermelonweight
let totaltotal = totalorange + totalwatermelon
let eachside = totaltotal / 2
let lefthalf = eachside / orangeweight
let righthalf = orangecost - lefthalf
